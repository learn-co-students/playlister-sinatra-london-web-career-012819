<h1>Add a New Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">
  <label> Artist Name </label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>"> </br>

  <label> Song Name </label>
  <input type="text" name="song[name]" id="name" value="<%= @song.name %>"> </br>

  <label> Genres </label>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" <% if @song.genres.include?(genre)%>checked="checked"<% end %> value="<%= genre.id %>"><%= genre.name %></input>
  <% end %>

  <input type="submit" value="Save">
</form>
